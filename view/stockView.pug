extends layouts/main.pug 

block content
        div.container.mt-5
            h3.text-center Asset Stocks by Branch
             if Object.keys(groupAssets).length > 0
                each branch in Object.keys(groupAssets)
                    h4.mt-4.text-primary= `Branch: ${branch}`
                    table(class="table table-striped table-bordered table-responsive mt-3")
                        thead.table-dark
                            tr
                                th NO
                                th CATEGORY
                                th BRAND
                                th MODEL
                                th SERIAL NO
                                th STATUS
                        tbody
                            each asset, index in groupAssets[branch]
                                tr
                                    td= index + 1
                                    td= asset.cat
                                    td= asset.brand
                                    td= asset.model
                                    td= asset.ser_no
                                    td= asset.status
             else
                p.text-center.mt-3 No assets found.

