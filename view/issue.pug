extends layouts/main.pug

block content
  
  // Main Content Section
  div.container.mt-5
    if msg == "assetIssued" || msg == "assetReturned" || msg == "assetScraped"
      div(class="alert alert-success alert-dismissible fade show" role="alert")
        strong Success! 
        | #{msg}
        button(type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close")
    h6.text-center  search by Ser_no and Emp Id both details in console please check
    form(action="/service/issue" method="POST" class="p-4 border rounded shadow bg-white" )
      h3.text-center.text-primary.mb-4 Issue Asset Form

      // Asset Details Section
      div.row.mb-3
        div.col-md-6
          label(for="assetId" class="form-label") Asset ID
          input(type="text" name="assetId" id="assetId" class="form-control" placeholder="Enter Asset ID" required)
        div.col-md-6
          label(for="assetCat" class="form-label") Asset Category
          input(type="text" name="assetCat" id="assetCat" class="form-control" placeholder="Enter Asset Category" required)

      div.row.mb-3
        div.col-md-6
          label(for="assetBrand" class="form-label") Asset Brand
          input(type="text" name="assetBrand" id="assetBrand" class="form-control" placeholder="Enter Asset Brand" required)
        div.col-md-6
          label(for="assetModel" class="form-label") Asset Model
          input(type="text" name="assetModel" id="assetModel" class="form-control" placeholder="Enter Asset Model" required)

      div.row.mb-3
        div.col-md-6
          label(for="assetSer_no" class="form-label") Serial Number
          input(type="text" name="assetSer_no" id="assetSer_no" class="form-control" placeholder="Enter Serial Number" required)
        div.col-md-6
          label(for="assetBranch" class="form-label") Branch
          input(type="text" name="assetBranch" id="assetBranch" class="form-control" placeholder="Enter Branch" required)

      // Employee Details Section
      div.row.mb-3
        div.col-md-4
          label(for="empId" class="form-label") Employee ID
          input(type="text" name="empId" id="empId" class="form-control" placeholder="Enter Employee ID" required)
        div.col-md-4
          label(for="empName" class="form-label") Employee Name
          input(type="text" name="empName" id="empName" class="form-control" placeholder="Enter Employee Name" required)
        div.col-md-4
          label(for="empNumber" class="form-label") Employee Number
          input(type="text" name="empNumber" id="empNumber" class="form-control" placeholder="Enter Employee Number" required)

      // User Details Section
      div.row.mb-3
        div.col-md-6
          label(for="userName" class="form-label") User Name
          input(type="text" name="userName" id="userName" class="form-control" placeholder="Enter User Name" required)

      div.row.mb-3
        div.col-md-6
          label(for="userNumber" class="form-label") User Number
          input(type="text" name="userNumber" id="userNumber" class="form-control" placeholder="Enter User Number" required)
        div.col-md-6
          label(for="reason" class="form-label") Reason
          input(type="text" name="reason" id="reason" class="form-control" placeholder="Enter Reason" required)

      div.row.mb-3
        div.col-md-12
          label(for="issueDate" class="form-label") Issue Date
          input(type="date" name="issueDate" id="issueDate" class="form-control" required)

      div.text-center
        button(type="submit" class="btn btn-primary mt-3 px-5") Issue Asset

  // Scripts
  script.
 
    const emp = !{JSON.stringify(emp)};
    const asset = !{JSON.stringify(asset)};

  script(src="/js/issue.js")
  script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js")
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js")
